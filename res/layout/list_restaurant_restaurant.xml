<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/fragment_restaurant_browser_list_restaurant_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/menuitem_wheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="?attr/fragment_restaurant_browser_list_restaurant_image" />

    <TextView
        android:id="@+id/list_restaurant_restaurant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menuitem_wheat"
        android:padding="16dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?attr/fragment_restaurant_browser_list_restaurant_text_colour" />

</RelativeLayout>
