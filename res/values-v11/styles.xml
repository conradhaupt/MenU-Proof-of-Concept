<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="MenUOriginal" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_menuoriginal</item>
        <item name="android:popupMenuStyle">@style/menuoriginal_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/menuoriginal_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/menuoriginal_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/menuoriginal_DropDownNav</item>
        <item name="android:actionBarStyle">@style/menuoriginal_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_menuoriginal</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.menuoriginal.widget</item>
    </style>

    <style name="menuoriginal_solid_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_menuoriginal</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_menuoriginal</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_menuoriginal</item>
        <item name="android:progressBarStyle">@style/menuoriginal_ProgressBar</item>
    </style>

    <style name="menuoriginal_transparent_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_menuoriginal</item>
        <item name="android:progressBarStyle">@style/menuoriginal_ProgressBar</item>
    </style>

    <style name="menuoriginal_PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_menuoriginal</item>
    </style>

    <style name="menuoriginal_DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_menuoriginal</item>
    </style>

    <style name="menuoriginal_ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_menuoriginal</item>
    </style>

    <style name="menuoriginal_DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_menuoriginal</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_menuoriginal</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_menuoriginal</item>
    </style>

    <style name="menuoriginal_ProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_menuoriginal</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.menuoriginal.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/menuoriginal_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/menuoriginal_DropDownListView</item>
        <item name="android:textColor">@color/menu_text_menuoriginal</item>
    </style>

    <style name="MenURed" parent="@style/MenUOriginal"></style>

</resources>